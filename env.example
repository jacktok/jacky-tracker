# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/expense_tracker
PGSSL=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-here

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# LINE OAuth Configuration
LINE_CHANNEL_ID=your-line-channel-id
LINE_CHANNEL_SECRET=your-line-channel-secret
LINE_CALLBACK_URL=http://localhost:3001/api/auth/line/callback

# Environment
NODE_ENV=development

# LLM API Configuration
# Groq API (14,400 free requests/day)
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama-3.1-8b-instant

# Google Gemini API (60 requests/minute, no daily limit)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-pro

# Anthropic Claude API (Free credits for new users)
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# OpenAI API ($5 free credits)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# Hugging Face API (1,000 free requests/month)
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# LLM Provider Selection (groq, gemini, claude, openai, huggingface)
LLM_PROVIDER=claude

